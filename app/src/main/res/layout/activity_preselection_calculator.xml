<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculadora de Preselección"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Modalidad de postulación"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_marginBottom="8dp">

            <AutoCompleteTextView
                android:id="@+id/modalitySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- LinearLayout para opciones EIB -->
        <LinearLayout
            android:id="@+id/eibOptionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Lengua originaria"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_marginBottom="8dp">

                <AutoCompleteTextView
                    android:id="@+id/eibLanguageSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"/>

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Puntaje ENP (0-120)"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/enpInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Clasificación SISFOH"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_marginBottom="8dp">

            <AutoCompleteTextView
                android:id="@+id/sisfohSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"/>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Departamento"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/departmentSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"/>

            </com.google.android.material.textfield.TextInputLayout>

            <ImageButton
                android:id="@+id/quintilInfoButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@android:drawable/ic_dialog_info"
                android:contentDescription="Información de quintiles"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actividades Extracurriculares"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <CheckBox
            android:id="@+id/concursoNacionalCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Concurso Escolar Nacional (1°, 2º o 3º Puesto Etapa Nacional) o Internacional"/>

        <CheckBox
            android:id="@+id/concursoParticipacionCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Participación en la Etapa Nacional de los Concursos Escolares Nacionales"/>

        <CheckBox
            android:id="@+id/juegosNacionalesCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Juegos Deportivos Escolares (1°, 2º o 3° puesto en Etapa Nacional)"/>

        <CheckBox
            android:id="@+id/juegosParticipacionCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Participación en la Etapa Nacional de los Juegos Deportivos Escolares Nacionales"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Otras condiciones priorizables"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <CheckBox
            android:id="@+id/discapacidadCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discapacidad"/>

        <CheckBox
            android:id="@+id/bomberosCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bomberos activos e hijos de bomberos"/>

        <CheckBox
            android:id="@+id/voluntariosCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voluntarios reconocidos por el MIMP"/>

        <CheckBox
            android:id="@+id/comunidadNativaCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pertenencia a Comunidad Nativa Amazónica o Población Afroperuana"/>

        <CheckBox
            android:id="@+id/metalesPesadosCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Población expuesta a metales pesados y otras sustancias químicas"/>

        <CheckBox
            android:id="@+id/poblacionBeneficiariaCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Población beneficiaria (Res. Suprema Nº 264-2022-JUS)"/>

        <CheckBox
            android:id="@+id/orfandadCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Población beneficiaria de la Ley N° 31405 (orfandad)"/>

        <CheckBox
            android:id="@+id/desproteccionCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desprotección familiar"/>

        <CheckBox
            android:id="@+id/agenteSaludCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agente Comunitario de Salud"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/calculateButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Calcular Puntaje"/>

            <Button
                android:id="@+id/clearButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Limpiar"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>